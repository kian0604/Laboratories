type Product {
    id: ID!
    name: String
    price: Float
}

type Query {
    getAllProducts: [Product]
    getProductById(id: ID!): Product
}

input ProductInput {
    name: String
    price: Float
}

type Mutation {
    addProduct(product: ProductInput): Product
    updateProduct(id: ID!, product: ProductInput): Product
    deleteProduct(id: ID!): Boolean
}